<form action="/students" method="post">
  <label for="first-name"> First name</label>
  <input id= "first-name" type="text" name="first_name">

  <label for="last-name"> Last name</label>
  <input id= "last-name" type="text" name="last_name">

  <label for="house-select">Select a house</label>
  <select name="house_id" id="house-select">
    <% for house in @houses %>
    <option value="<%=@house.id%>"> <%= house.name.capitalize  %> </option>
    <% end  %>
  </select>



  <label for="age"> Age</label>
  <input id= "age" type="number" name="age">

  <input type="submit" value="Enroll at Hogwarts">

</form>
